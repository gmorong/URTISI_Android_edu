<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#989bb3"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/upper_bg"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="#46BEE6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_alternates"
            android:textSize="40sp"
            android:layout_marginTop="15sp"
            android:layout_marginStart="60sp"
            android:text="Kamkov D.A."
            android:textColor="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_alternates"
            android:textSize="20sp"
            android:layout_marginTop="70sp"
            android:layout_marginStart="60sp"
            android:text="PE-12b"
            android:textColor="#545563" />
        
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/upper_bg"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="-90dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:src="@drawable/profile" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:layout_below="@id/profile"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="60dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:text=" Vk:        @duraash\n Inst:     @d__kamkov\n P/n:      +7-999-563-35-90\n email:  dimon.kamkov@mail.ru"
            android:fontFamily="@font/montserrat_alternates"
            android:textSize="16sp"
            />
    </RelativeLayout>

</RelativeLayout>